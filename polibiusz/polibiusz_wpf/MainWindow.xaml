<Window x:Class="polibiusz_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Szyfr Polibiusza" Height="300" Width="400">
    <Grid>
        <Label Content="Tekst:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="InputTextBox" HorizontalAlignment="Left" Margin="70,10,0,0" VerticalAlignment="Top" Width="200"/>

        <Button Content="Szyfruj" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,55,0,0" Click="EncryptButton_Click"/>
        <Button Content="Deszyfruj" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="90,55,0,0" Click="DecryptButton_Click"/>

        <Label Content="Wynik:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0"/>
        <TextBox x:Name="OutputTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="340" Height="150" Margin="10,120,0,0" IsReadOnly="True"/>
    </Grid>
</Window>
